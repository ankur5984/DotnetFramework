@model BOL.Product
<h2>Add New Product To Store</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class=" form-horizontal">
        <h4>Product</h4>
        <hr />

        <div class="form-group">
            @Html.LabelFor(model => model.Id, htmlAttributes: new { @class = "form-label col-md-2" })
            <div>
                @Html.EditorFor(model => Model.Id))
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model =>model.Title,htmlAttributes: new { @class = "form-label col-md-2"})
            <div>
                @Html.EditorFor(model => Model.Title)
            </div>

        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Quantity, htmlAttributes: new { @class = "form-label col-md-2" })
            <div>
                @Html.EditorFor(model => Model.Quantity))
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Price, htmlAttributes: new { @class = "form-label col-md-2" })
            <div>
                @Html.EditorFor(model => Model.Price))
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">

                <input type="submit" value="update" class="btn btn-default" />
            </div>
        </div>

    </div>
}